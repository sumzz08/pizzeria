generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      =  env("DATABASE_URL")
}

model Todo {
  id          Int        @id @default(autoincrement())
  task        String
  description String?
  status      TodoStatus
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  userEmail   String? // Nullable userEmail, in case a Todo is created without a user
  user        User?      @relation(fields: [userEmail], references: [email])

  @@index([userEmail])
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String
  todos    Todo[]
}

enum TodoStatus {
  DONE
  ACTIVE
}
